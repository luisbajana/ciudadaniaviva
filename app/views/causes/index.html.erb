

  <div class="text-left">
    <h2>Causas</h2>
    

    <div class="container">
      <div class="row">
        <ul class="thumbnails list-unstyled">
          <% @causes.each do |cause| %> 

            <li class="col-md-4">
              <div class="thumbnail" style="padding: 0">
                <div style="padding:4px">
                  <%= image_tag cause.photo.url(:square) %>
                </div>
                <div class="caption">
                  <h3><%= link_to cause.title, "/#{cause.custom_url}" %></h3>
                  <p><%= cause.description %></p>
                  <p><%= cause.impact %></p>
                  <p><%= link_to "Ayudar", "/#{cause.custom_url}", :class => 'btn btn-lg btn-success' %></p>
                  
                </div>

                <div class="modal-footer" style="text-align: left">

                  <div class="progress">

                      <div class="progress-bar" role="progressbar" aria-valuenow="<%= (num_supporters(cause.id).to_f / cause.goal.to_f)*100 %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= (num_supporters(cause.id).to_f / cause.goal.to_f)*100 %>%;">
                        <span class="sr-only"><%= cause.goal %>% Complete</span>
                      </div>
                    

                  </div>

                  <div class="row">
                    
                    <div class="col-md-6 text-center"><b><%= num_supporters(cause.id) %></b><br/>
                      <% if num_supporters(cause.id) > 1 or num_supporters(cause.id)==0 %>
                        <small>PERSONAS AYUDANDO</small>
                      <% else %>
                        <small>PERSONA AYUDANDO</small>
                      <% end %>

                    </div>

                    <div class="col-md-6 text-center"><b><%= cause.goal %></b><br/><small>NECESITAMOS</small></div>
                    
                  </div>

                </div>


                <!-- EDITING MODE -->
                <% if current_user %>
                    <% if current_user.id == cause.user_id %>
                      <div class="container">
                        <%= link_to 'Editar', edit_cause_path(cause) %>
                      </div>
                      <br />
                    <% end %>
                <% end %>
                <!-- -->


                
              </div>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
    
  </div>
    

  <div class="col-md-12">
    
    <% if current_user %>
      <h3><%= current_user.name %></h3>
      <%= image_tag current_user.picture %>
      <%= link_to "Cerrar SesiÃ³n", '/signout' %>
    <% end %>
    
  </div>
    