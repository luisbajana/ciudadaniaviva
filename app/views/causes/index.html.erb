

<% if current_user %>  



  <div class="text-left">
    <h2>Causas</h2>
    
    <table class="table">
        <thead>
        <tr>
          <th>Causa</th>
          <th>Meta</th>
          <th>Participantes</th>
          <th></th>
        </tr>
      </thead>
      <% @causes.each do |cause| %> 
        <tr>
          <td><%= link_to cause.title, "/#{cause.custom_url}" %></td>
          <td><%= cause.goal %></td>
          <td><%= num_supporters(cause.id) %></td>
          <td><%= link_to "Ayudar", "/#{cause.custom_url}" %></td>
        </tr>
      <% end %>
    </table>
    

  </div>
    

  <div class="col-md-12">


    <h3><%= current_user.name %></h3>
    <%= link_to "Cerrar Sesión", '/signout' %>
    
  </div>
    

